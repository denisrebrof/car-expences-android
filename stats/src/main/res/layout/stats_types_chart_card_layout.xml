<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stats_chart_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:columnCount="2"
    tools:showIn="@layout/fragment_stats_main">

    <com.upreality.uikit.IndexValueCard
        android:id="@+id/rpl"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:icon="@drawable/ic_fuel_half_filled"
        app:iconColor="@color/colorSecondary"
        app:titleText="Rate per liter"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp" />

    <com.upreality.uikit.IndexValueCard
        android:id="@+id/rpm"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:titleText="Rate per mile"
        app:icon="@drawable/ic_speed"
        app:iconColor="@color/colorSecondary"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp" />

    <com.upreality.uikit.IndexValueCard
        android:id="@+id/rate_last_month"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:titleText="Rate last month"
        app:icon="@drawable/ic_calendar"
        app:iconColor="@color/colorSecondaryLight"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp" />

    <com.upreality.uikit.IndexValueCard
        android:id="@+id/rate_per_month"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:titleText="Rate per month"
        app:icon="@drawable/ic_calendar"
        app:iconColor="@color/colorSecondaryLight"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />
</GridLayout>