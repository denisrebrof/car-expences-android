<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stats_chart_card_root"
    app:cardBackgroundColor="?colorBackgroundFloating"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:showIn="@layout/fragment_stats_main">

    <com.upreality.uikit.IndexValueCard
        android:id="@+id/rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="8dp"
        app:icon="@drawable/ic_credit_card"
        app:iconColor="@color/colorSecondaryLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="Rate per month" />

    <com.upreality.uikit.IndexValueCard
        android:id="@+id/rpl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="8dp"
        app:icon="@drawable/ic_fuel_half_filled"
        app:iconColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rpm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate"
        app:titleText="Rate per liter" />

    <com.upreality.uikit.IndexValueCard
        android:id="@+id/rpm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="8dp"
        app:icon="@drawable/ic_speed"
        app:iconColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rpl"
        app:layout_constraintTop_toBottomOf="@id/rate"
        app:titleText="Rate per mile" />

</androidx.constraintlayout.widget.ConstraintLayout>